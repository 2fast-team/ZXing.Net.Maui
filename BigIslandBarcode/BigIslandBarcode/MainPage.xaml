<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
	x:Class="BigIslandBarcode.MainPage"
	BackgroundColor="#000000">

	<GridLayout RowDefinitions="1*,3*,1*">

		<zxing:CameraBarcodeReaderView
			GridLayout.Row="0" GridLayout.RowSpan="3"
			x:Name="barcodeView"
			BarcodesDetected="BarcodesDetected" />

		<GridLayout
			GridLayout.Row="0"
			BackgroundColor="#aa000000">
			<Label GridLayout.Row="2" Text="Top text..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
		</GridLayout>

		<GridLayout
			GridLayout.Row="3"
			BackgroundColor="#aa000000">
			<Label GridLayout.Row="2" Text="Bottom text..." HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
		</GridLayout>

	</GridLayout>
	
</ContentPage>
